<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/image"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#256ABD"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_margin="10dp"
        android:orientation="vertical">

        <!--        <Button-->
        <!--            android:id="@+id/buttonScanBarcode"-->
        <!--            android:layout_width="match_parent"-->
        <!--            android:layout_height="wrap_content"-->
        <!--            android:layout_marginTop="10dp"-->
        <!--            android:text="@string/scan_barcode" />-->

    </LinearLayout>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="0dp"
        android:background="#C3F5EFEF"
        android:backgroundTint="#FFFFFF"
        android:src="@drawable/logo2" />

    <Button
        android:id="@+id/buttonTakePicture"
        android:layout_width="375dp"
        android:layout_height="65dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="17dp"
        android:layout_marginBottom="40dp"
        android:backgroundTint="#FFFFFF"
        android:shadowColor="#E6000000"
        android:shadowDx="100"
        android:shadowDy="100"
        android:shadowRadius="10"
        android:text="@string/take_barcode_picture"
        android:textAlignment="center"
        android:textColor="#054875"
        android:textSize="18sp"
        android:textStyle="bold"
        android:visibility="visible" />

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="375dp"
        android:layout_height="65dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="19dp"
        android:layout_marginEnd="18dp"
        android:layout_marginBottom="374dp"
        android:background="@android:drawable/btn_dropdown"
        android:backgroundTint="#FFFFFF"
        android:spinnerMode="dropdown" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="448dp"
        android:text="Select your store and scan an item for product details!"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:textStyle="bold" />
</RelativeLayout>