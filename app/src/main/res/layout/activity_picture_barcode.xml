<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="15dp"
    tools:context=".PictureBarcodeActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="349dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/logo2" />

    <TextView
        android:id="@+id/textViewResultsHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView"
        android:layout_centerHorizontal="true"
        android:text="Results"
        android:textSize="24sp"
        android:textStyle="bold"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/itemName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewResultsHeader"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:text="Name: Blue Shoe"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/itemDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/itemName"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:text="Description: Blue Shoe"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/itemQuantity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/itemSize"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:visibility="invisible"
        android:text="Quantity: Blue Shoe" />

    <TextView
        android:id="@+id/itemColour"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/itemQuantity"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:visibility="invisible"
        android:text="Colours: Blue" />

    <TextView
        android:id="@+id/itemReview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/itemPrice"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:visibility="invisible"
        android:text="Review: 5/10" />

    <TextView
        android:id="@+id/itemStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/itemReview"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:visibility="invisible"
        android:text="Status: Available Online" />

    <TextView
        android:id="@+id/itemPrice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/itemOtherColours"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:visibility="invisible"
        android:text="Price: $5.00" />

    <TextView
        android:id="@+id/itemSize"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/itemDescription"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:visibility="invisible"
        android:text="Size" />

    <TextView
        android:id="@+id/itemOtherColours"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/itemColour"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:visibility="invisible"
        android:text="OtherColours" />

    <Button
        android:id="@+id/buttonOpenCamera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:backgroundTint="#FFFFFF"
        android:shadowColor="#E6000000"
        android:shadowDx="100"
        android:shadowDy="100"
        android:shadowRadius="10"
        android:textColor="#054875"
        android:textStyle="bold"
        android:text="@string/open_camera" />

    <Button
        android:id="@+id/buttonCheckOut"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:backgroundTint="#FFFFFF"
        android:shadowColor="#E6000000"
        android:shadowDx="100"
        android:shadowDy="100"
        android:shadowRadius="10"
        android:textColor="#054875"
        android:textStyle="bold"
        android:text="@string/check_out"
        android:visibility="invisible" />

</RelativeLayout>